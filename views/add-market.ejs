<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Market - Payroll System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/add-market.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <h3>Navigation</h3>
                <nav>
                    <a href="/bank">Bank Transfer</a>
                    <a href="/hawala">Hawala Transfer</a>
                    <a href="/bank-history">Bank History</a>
                    <a href="/hawala-history">Hawala History</a>
                    <a href="/add-market" class="active">Add Market</a>
                    <a href="/add-bank">Add Bank</a>
                    <a href="/add-account">Add Account</a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col main-content">
                <div class="form-container">
                    <h2 class="mb-4">Add New Market</h2>
                    <% if (error) { %>
                        <div class="alert alert-danger mb-3">
                            <%= error %>
                        </div>
                    <% } %>
                    <form action="/add-market" method="POST">
                        <div class="mb-3">
                            <label for="marketName" class="form-label">Market Name</label>
                            <input type="text" class="form-control" id="marketName" name="marketName" required>
                        </div>
                        <button type="submit" class="btn btn-submit">Add Market</button>
                    </form>
                </div>

                <div class="markets-list">
                    <h3 class="mb-4">Current Markets</h3>
                    <% if (markets && markets.length > 0) { %>
                        <% markets.forEach(market => { %>
                            <div class="market-list-item">
                                <i class="bi bi-shop market-icon"></i>
                                <%= market %>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p class="text-center text-muted">No markets added yet</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>