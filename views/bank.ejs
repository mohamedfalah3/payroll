<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payroll System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/bank.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <h3>Navigation</h3>
                <a href="/bank" class="active">Bank Transfer</a>
                <a href="/hawala">Hawala Transfer</a>
                <a href="/bank-history">Bank History</a>
                <a href="/hawala-history">Hawala History</a>
                <a href="/add-market">Add Market</a>
                <a href="/add-bank">Add Bank</a>
                <a href="/add-account">Add Account</a>
            </div>

            <!-- Main Content -->
            <div class="col main-content">
                <h1>Bank Transfer System</h1>
                
                <!-- Banks Section -->
                <div class="transfer-form mb-4">
                    <h3 class="mb-4">Select Bank</h3>
                    <div class="row g-3" id="bankCardsContainer">
                        <% if (banks && banks.length > 0) { %>
                            <% banks.forEach(function(bank) { %>
                                <div class="col-md-3">
                                    <div class="card bank-card" data-bank="<%= bank %>">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= bank %></h5>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="col-12">
                                <p class="text-center text-muted">No banks available. Please <a href="/add-bank">add a bank</a> first.</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="transfer-form">
                    <form id="bankForm">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label">Bank Name</label>
                                <input type="text" class="form-control" name="bankName" readonly required placeholder="Click a bank card above to select">
                                <% if (!banks || banks.length === 0) { %>
                                    <small class="text-muted">No banks available. Please <a href="/add-bank">add a bank</a> first.</small>
                                <% } %>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Account Name</label>
                                <select class="form-select" name="accountName" required>
                                    <option value="">Select account</option>
                                    <% if (accounts && accounts.length > 0) { %>
                                        <% accounts.forEach(function(account) { %>
                                            <option value="<%= account %>"><%= account %></option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <% if (!accounts || accounts.length === 0) { %>
                                    <small class="text-muted">No accounts available. Please <a href="/add-account">add an account</a> first.</small>
                                <% } %>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Amount</label>
                                <div class="input-group">
                                    <select class="form-select" name="currency" style="max-width: 100px;" required>
                                        <option value="USD" selected>USD</option>
                                        <option value="EUR">EUR</option>
                                        <option value="IQD">IQD</option>
                                    </select>
                                    <input type="number" class="form-control" name="amount" placeholder="Enter amount" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Transaction Type</label>
                                <select class="form-select" name="transactionType" required>
                                    <option value="receive">Receive Money</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Transfer Description</label>
                                <textarea class="form-control" name="description" rows="3" placeholder="Enter transfer description"></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100">Process Bank Transfer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Transaction Successful</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                    </div>
                    <p class="text-center mb-4" id="successMessage"></p>
                    <div class="transaction-details">
                        <p><strong>Amount:</strong> <span id="modalAmount"></span></p>
                        <p><strong>Bank Name:</strong> <span id="modalBankName"></span></p>
                        <p><strong>Account Name:</strong> <span id="modalAccountName"></span></p>
                        <p><strong>Type:</strong> <span id="modalType"></span></p>
                        <p><strong>Description:</strong> <span id="modalDescription"></span></p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/bank.js"></script>
</body>
</html>