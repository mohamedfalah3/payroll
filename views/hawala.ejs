        let marketSortDirection = 'asc'; // Default ascending sort
        
        // Function to sort transactions by market directly in the page
        function toggleMarketSort() {
            // Toggle the sort direction
            marketSortDirection = marketSortDirection === 'asc' ? 'desc' : 'asc';
            sortByMarket();
        }
        
        // Function to sort transactions by market
        function sortByMarket() {
            // Get all transaction rows from the current view
            const tbody = document.querySelector('#historyTab tbody');
            if (!tbody) return;
            
            // Get active rows (either filtered rows or all visible rows)
            const rows = Array.from(tbody.querySelectorAll('tr.transaction-row:not(.no-results):not([style*="display: none"])'));
            if (rows.length === 0) return;
            
            // Update the sort indicator based on current direction
            const sortIndicator = document.querySelector('.market-sort-indicator i');
            if (sortIndicator) {
                sortIndicator.className = marketSortDirection === 'asc' 
                    ? 'bi bi-sort-alpha-down' 
                    : 'bi bi-sort-alpha-up';
