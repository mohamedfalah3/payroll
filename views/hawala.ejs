<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payroll System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/hawala.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <h3>Navigation</h3>
                <a href="/bank">Bank Transfer</a>
                <a href="/hawala" class="active">Hawala Transfer</a>
                <a href="/bank-history">Bank History</a>
                <a href="/hawala-history">Hawala History</a>
                <a href="/add-market">Add Market</a>
                <a href="/add-bank">Add Bank</a>
                <a href="/add-account">Add Account</a>
            </div>

            <!-- Main Content -->
            <div class="col main-content">
                <h1>Hawala Transfer System</h1>
                
                <!-- Markets Section -->
                <div class="transfer-form mb-4">
                    <h3 class="mb-4">Select Market</h3>
                    <div class="row g-3" id="marketCardsContainer">
                        <% if (markets && markets.length > 0) { %>
                            <% markets.forEach(function(market) { %>
                                <div class="col-md-3">
                                    <div class="card market-card" data-market="<%= market %>">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= market %></h5>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="col-12">
                                <p class="text-center text-muted">No markets available. Please <a href="/add-market">add a market</a> first.</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="transfer-form">
                    <form id="hawalaForm" novalidate>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label">Account Name</label>
                                <select class="form-select" name="accountName" required>
                                    <option value="">Select account</option>
                                    <% if (accounts && accounts.length > 0) { %>
                                        <% accounts.forEach(function(account) { %>
                                            <option value="<%= account %>"><%= account %></option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <% if (!accounts || accounts.length === 0) { %>
                                    <small class="text-muted">No accounts available. Please <a href="/add-account">add an account</a> first.</small>
                                <% } %>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Selected Market</label>
                                <input type="text" class="form-control" id="selectedMarket" name="market" readonly required placeholder="Click a market card above to select">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Nusinga</label>
                                <input type="text" class="form-control" name="nusinga" placeholder="Enter nusinga" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Transaction Type</label>
                                <select class="form-select" name="transactionType" required>
                                    <option value="">Select transaction type</option>
                                    <option value="send">Send Money</option>
                                    <option value="receive">Receive Money</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Amount</label>
                                <div class="input-group">
                                    <select class="form-select" name="currency" style="max-width: 100px;" required>
                                        <option value="USD" selected>USD</option>
                                        <option value="EUR">EUR</option>
                                        <option value="IQD">IQD</option>
                                    </select>
                                    <input type="number" class="form-control" name="amount" placeholder="Enter amount" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Transfer Description</label>
                                <textarea class="form-control" name="purpose" rows="3" placeholder="Enter purpose of transfer" required></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100">Process Hawala Transfer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Transaction Successful</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                    </div>
                    <p class="text-center" id="successMessage"></p>
                    <div class="transaction-details mt-3">
                        <p><strong>Amount:</strong> <span id="modalAmount"></span></p>
                        <p><strong>Market:</strong> <span id="modalMarket"></span></p>
                        <p><strong>Account Name:</strong> <span id="modalAccountName"></span></p>
                        <p><strong>Nusinga:</strong> <span id="modalNusinga"></span></p>
                        <p><strong>Type:</strong> <span id="modalType"></span></p>
                        <p><strong>Purpose:</strong> <span id="modalPurpose"></span></p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/hawala.js"></script>
</body>
</html>